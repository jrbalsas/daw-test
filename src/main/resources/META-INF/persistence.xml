<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="ClubPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
        <!-- Use JNDI Datasource (e.g. Tomcat connection pool) -->
        <non-jta-data-source>java:/comp/env/jdbc/gestClub</non-jta-data-source>

        <properties>
            <!-- Hibernate properties -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <!-- Other Hibernate properties 
                  <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            -->      
            <!-- JDBC Direct configuration (i.e. with Hibernate own connection pool)
              <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/club"/>
               <property name="javax.persistence.jdbc.user" value="dawuser1"/>
               <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
               <property name="javax.persistence.jdbc.password" value="dawuser1"/>
            -->
        </properties>
    </persistence-unit>
</persistence>
